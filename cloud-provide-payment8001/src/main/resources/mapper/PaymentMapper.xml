<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "edu.xaufe.springcloud.dao.PaymentDao">
    <!--向数据库写入数据-->
    <insert id="save" parameterType="Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment_tab(serial) values(#{serial});
    </insert>
    <resultMap id="BaseResultMap" type="edu.xaufe.springcloud.entities.Payment">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="serial" property="serial" jdbcType="VARCHAR"/>
    </resultMap>
    <!--向数据库读出数据，建议使用键值对映射查询-->
    <select id="findById" parameterType="Long" resultMap="BaseResultMap">
        select * from payment_tab where id=#{id}
    </select>
</mapper>